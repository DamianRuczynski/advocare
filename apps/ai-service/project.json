{
  "name": "ai-service",
  "root": "apps/ai-service",
  "sourceRoot": "apps/ai-service/src",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-service",
        "command": ".venv\\Scripts\\python.exe -m pip install -r requirements.txt"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/ai-service",
        "command": ".venv\\Scripts\\python.exe -m uvicorn src.main:app --reload"
      }
    }
  }
}
