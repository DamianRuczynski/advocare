{
  "name": "api-types",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "api-types/src",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/api-types",
        "main": "api-types/src/index.ts",
        "tsConfig": "api-types/tsconfig.lib.json",
        "assets": ["api-types/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
